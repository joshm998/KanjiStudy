@page "/settings"
<div class="flex px-4">
    <h1 class="text-4xl flex-1 ">Settings</h1>
</div>


<div class="bg-gray-100 py-6 flex flex-col mx-4 justify-center">
    <div class="relative py-3 w-full sm:mx-auto">
        <div class="relative p-8 bg-white shadow-sm sm:rounded-xl">
            <EditForm Model="@_settingsModel" OnValidSubmit="@HandleValidSubmit" class="w-full mx-auto">
                <div class="mb-5 relative">
                    <InputNumber type="text" id="maxNewCards" class="peer pt-8 border border-gray-200 focus:outline-none rounded-md focus:border-gray-500 focus:shadow-sm w-full p-3 h-16 placeholder-transparent" placeholder="0" @bind-Value="_settingsModel.MaxNewCards"/>
                    <label for="maxNewCards" class="peer-placeholder-shown:opacity-100 opacity-75 peer-focus:opacity-75 peer-placeholder-shown:scale-100 scale-75 peer-focus:scale-75 peer-placeholder-shown:translate-y-0 -translate-y-3 peer-focus:-translate-y-3 peer-placeholder-shown:translate-x-0 translate-x-1 peer-focus:translate-x-1 absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out"> Max New Cards </label>
                </div>
                <div class="mb-5 relative">
                    <InputNumber type="text" id="maxExistingCards" class="peer pt-8 border border-gray-200 focus:outline-none rounded-md focus:border-gray-500 focus:shadow-sm w-full p-3 h-16 placeholder-transparent" placeholder="0" @bind-Value="_settingsModel.MaxExistingCards"/>
                    <label for="maxExistingCards" class="peer-placeholder-shown:opacity-100 opacity-75 peer-focus:opacity-75 peer-placeholder-shown:scale-100 scale-75 peer-focus:scale-75 peer-placeholder-shown:translate-y-0 -translate-y-3 peer-focus:-translate-y-3 peer-placeholder-shown:translate-x-0 translate-x-1 peer-focus:translate-x-1 absolute top-0 left-0 px-3 py-5 h-full pointer-events-none transform origin-left transition-all duration-100 ease-in-out"> Max Existing Cards </label>
                </div>
                <DataAnnotationsValidator/>
                <ValidationSummary/>
                <button type="submit" class="w-full bg-indigo-600 text-white p-3 rounded-md">Save</button>
            </EditForm>
        </div>
    </div>
</div>